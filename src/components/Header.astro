<style lang="scss">
  @use "../abstractStyles/" as *;
  header {
    @include container();

    display: grid;
    grid-template-columns: 288px 1fr;
  }
  @include for-desktop-only {
    .phone-menu {
      display: none;
    }
  }
  nav {
    position: relative;
  }
  .phone-menu {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
  }
  .logo {
    display: flex;
    justify-content: center;
  }
  ul {
    width: 100%;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }
  li {
    list-style: none;
  }
  .nav-link {
    @include Nav();
  }
</style>
