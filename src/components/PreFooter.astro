---
const {
  heading,
  subHeading,
  buttonVisibility = true,
  buttonText = "Kostenloses Beratungsgespr√§ch anfragen",
  buttonLink = "/kontakt",
} = Astro.props;

import Button from "./Button.astro";
---

<section>
  <div class="bg-circle"></div>
  <div class="wrapper">
    <h2>{heading}</h2>
    <h3>{subHeading}</h3>
    <div class="button">
      <Button
        text={buttonText}
        href={buttonLink}
        style=`display: ${buttonVisibility? "block": "none"}`
      />
    </div>
  </div>
</section>

<style lang="scss">
  @use "../abstractStyles/" as *;

  section {
    position: relative;
    margin-top: $space-60;
    padding-bottom: $space-60;
    overflow: hidden;
  }

  .bg-circle {
    position: absolute;
    z-index: -1;
    border-radius: 50%;
    width: 5750px;
    height: 5750px;
    background-color: $primary-200;

    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .wrapper {
    @include container();
    & > * {
      margin-inline: auto;
    }
  }

  h2 {
    @include H1();
    text-align: center;
  }

  h3 {
    @include H3();
    text-align: center;
    max-width: 850px;
  }

  .button {
    margin-top: $space-40;
    text-align: center;
  }
</style>
