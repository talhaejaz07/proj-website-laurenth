---
const { heading, text, buttonText, buttonLink, target = "_self" } = Astro.props;

import Image from "astro/components/Image.astro";
import Button from "./Button.astro";

import bgBook from "../assets/images/bg-book.png";
---

<section>
  <div class="section-wrapper">
    <Image src={bgBook} alt="background book" class="background-book" />
    <div class="wrapper">
      <div class="description">
        <h2>{heading}</h2>
        <h3>{text}</h3>
      </div>
      <div class="button">
        <Button text={buttonText} href={buttonLink} target={target} />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../abstractStyles/" as *;

  section {
    background-color: $green-300;
    margin: $space-60 0;
    overflow: hidden;

    .section-wrapper {
      position: relative;
    }

    .background-book {
      position: absolute;
      width: 750px;
      height: auto;
      z-index: 1;

      right: -5%;
      top: 15%;

      @media (width <= 1780px) {
        right: -20%;
        top: 35%;
      }

      @media (width <= 1200px) {
        top: 45%;
      }
      @media (width <= 1000px) {
        top: 60%;
      }
      @media (width <= 1000px) {
        top: 70%;
      }
    }
  }

  .wrapper {
    @include container();
  }

  .description {
    display: flex;
    flex-direction: column;
    align-items: center;

    h2 {
      @include H1();
      text-align: center;
    }

    h3 {
      @include H3();
      text-align: center;
      max-width: 1000px;

      position: relative;
      z-index: 3;
    }
  }

  .button {
    margin-top: $space-60;
    text-align: center;
    position: relative;
    z-index: 3;
  }
</style>
