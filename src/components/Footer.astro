<style lang="scss">
  @use "../abstractStyles/" as *;

  section {
    background-color: $primary-500;
  }

  footer {
    @include container();

    display: grid;
    grid-template-columns: 20% 20% 20% 40%;

    @include for-smaller-than-desktop {
      grid-template-columns: 1fr;

      gap: $space-medium;
    }
  }

  .logo-nav {
    display: flex;
    flex-direction: column;
    gap: $space-40;

    .logo {
      width: 100%;
      height: auto;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: $space-medium;

      @include for-smaller-than-desktop {
        align-items: center;
      }
    }

    li {
      list-style: none;
    }

    .nav-link {
      @include Nav($light-000);
      text-decoration: none;
    }
  }

  .mini-nav {
    display: flex;
    align-items: flex-end;

    @include for-smaller-than-desktop {
      justify-content: center;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: $space-medium;
    }

    li {
      list-style: none;
    }

    .nav-link {
      @include Nav($light-000);
      text-decoration: none;
    }
  }

  .social {
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    flex-wrap: wrap;

    .social-logo {
      color: $light-000;
      width: 60px;
      height: auto;
    }
  }

  .contact {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: $space-medium;

    @include for-desktop-only {
      border-left: 1px solid $light-000;
      margin-left: $space-80;
    }
    p {
      @include P($light-000);
    }
  }
</style>
