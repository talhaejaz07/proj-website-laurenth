---
import Layout from "../layouts/Layout.astro";

import MainHeading from "../components/MainHeading.astro";
import Button from "../components/Button.astro";

import HeroImage from "../assets/images/hero-image.webp";

import Beratung from "../assets/svgs/beratung.svg";
import Coaching from "../assets/svgs/coaching.svg";
import Umsetzung from "../assets/svgs/umsetzung.svg";

import VideoImage from "../assets/images/video-img.webp";
import CWS from "../assets/svgs/cws.svg";
---

<Layout title="Startseite">
  <MainHeading
    heading="Gute Ziele inspirieren - Individuelle Lösungen für erfolgreiche Unternehmenskultur"
    subheading="Unternehmensberatung & Coaching"
    buttonVisibility="true"
    buttonLink="#"
  />

  <section class="hero">
    <div class="image">
      <img src={HeroImage.src} alt="hero image" />
    </div>
  </section>

  <div class="icon-list">
    <img src={Beratung.src} alt="beratung" />
    <img src={Coaching.src} alt="coaching" />
    <img src={Umsetzung.src} alt="umsetzung" />
  </div>
</Layout>

<div class="quote-heading-wrapper">
  <h2 class="quote-heading">
    „Innovation besteht darin, zu sehen, was alle sehen und dabei zu denken, was
    niemand denkt.“
  </h2>
</div>

<section class="section-two">
  <h2 class="second-heading">
    Veränderung sprozesse erfolgreich gestalten – durch eine Verbindung von
    persönlicher Interaktion und digitalen Möglichkeiten
  </h2>
  <h3 class="second-subheading">Unser Konzept: die Siegertreppe</h3>

  <img class="video-image" src={VideoImage.src} alt="video-image" />

  <div class="button">
    <Button href="#" text="Die Siegertreppe" />
  </div>

  <p>Erfolgreiche Zusammenarbeit mit:</p>
</section>

<div class="sponsors">
  <div class="sponsor-image-wrapper">
    <img src={CWS.src} alt="sponsor" />
    <img src={CWS.src} alt="sponsor" />
    <img src={CWS.src} alt="sponsor" />
    <img src={CWS.src} alt="sponsor" />
    <img src={CWS.src} alt="sponsor" />
    <img src={CWS.src} alt="sponsor" />
  </div>
</div>

<div class="book-quote">
  <div class="book-quote-wrapper">
    <h2 class="book-quote-heading">
      Inspiration und Motivation mit Praxisbeispielen
    </h2>
    <h3 class="book-quote-subheading">
      Entdecken Sie auch die inspirierenden Bücher von Jörg Lauenroth – Führung,
      Teamentwicklung und mehr.
    </h3>
    <div class="button">
      <Button href="#" text="Bücher entdecken" />
    </div>
  </div>
</div>

<style lang="scss">
  @use "../abstractStyles/" as *;

  .bg-circle {
    height: 5853px;
    width: 5853px;
    background-color: $primary-200;
    border-radius: 50%;

    position: absolute;
    z-index: -1;
    left: 50%;
    transform: translateX(-50%);

    top: -4771px;
  }

  .hero {
    position: relative;
    overflow: hidden;
    padding-top: 100px;
  }

  .wrapper {
    @include container();
  }

  h1 {
    @include H1();
    text-align: center;
  }
  .sub-heading {
    @include H2();
    text-align: center;
    padding-bottom: 50px;
  }

  .button {
    display: flex;
    justify-content: center;
    padding-bottom: 130px;
  }

  .image {
    position: relative;

    padding-bottom: 140px;
  }

  .icon-list {
    @include container();

    display: flex;
    gap: $space-medium;
    justify-content: space-around;
    padding-bottom: 120px;

    img {
      @include for-tablet-only {
        width: 120px;
      }
    }

    @include for-phone-only {
      flex-direction: column;
      width: 180px;
    }
  }

  .quote-heading-wrapper {
    background-color: $red-400;
  }
  .quote-heading {
    @include container();
    @include H1($light-000);
    text-align: center;
    padding-top: 75px;
    padding-bottom: 75px;
  }

  .section-two {
    @include container();
    padding-top: 200px;
  }
  .second-heading {
    @include H1();
    text-align: center;
  }

  .second-subheading {
    @include H2();
    text-align: center;
    padding-bottom: 130px;
  }

  .video-image {
    padding-bottom: 140px;
  }
  p {
    @include P();
  }

  .sponsors {
    background-color: $black-200;
    padding-top: 75px;
    padding-bottom: 75px;

    .sponsor-image-wrapper {
      @include container();

      display: grid;
      gap: $space-medium;
      justify-items: center;
      grid-template-columns: repeat(6, 1fr);

      @include for-tablet-only {
        grid-template-columns: repeat(3, 1fr);
      }

      @include for-phone-only {
        grid-template-columns: repeat(1, 1fr);
      }
    }
  }

  .book-quote {
    margin-top: 200px;
    background-color: $green-300;
    padding-top: 100px;
  }

  .book-quote-wrapper {
    @include container();
  }

  .book-quote-heading {
    @include H1();
    text-align: center;
  }

  .book-quote-subheading {
    @include H3();
    text-align: center;
    padding-bottom: 70px;
  }
</style>
