---
import logoColored from "../assets/svgs/logo-colored.svg";
import Hamburger from "../assets/svgs/hamburger.svg";
import Cross from "../assets/svgs/cross.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="./favicon.webp" type="image/x-icon" />
    <title>Test</title>
  </head>
  <style is:global lang="scss">
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
  </style>
  <body style="background-color: black;">
    <header data-click="false">
      <a class="logo" href="/"><img src={logoColored.src} alt="Logo" /></a>

      <nav>
        <ul>
          <li>
            <a class="nav-link" href="/uber-uns">Ãœber uns</a>
          </li>
          <li>
            <a class="nav-link" href="/leistungen">Leistungen</a>
          </li>
          <li>
            <a class="nav-link" href="/siegertreppe">Siegertreppe</a>
          </li>
          <li>
            <a class="nav-link" href="/blog">Blog</a>
          </li>
          <li>
            <a class="nav-link" href="/app">App</a>
          </li>
          <li>
            <a class="nav-link" href="/kontakt">Kontakt</a>
          </li>
        </ul>
      </nav>
      <img class="phone-menu hamburger" src={Hamburger.src} alt="phone menue" />
      <img class="phone-menu cross" src={Cross.src} alt="phone menue" />
    </header>

    <script>
      let header: any = document.querySelector("header");
      let click = false;
      let clickEvent = () => {
        click = !click;

        if (click) {
          header.setAttribute("data-click", "true");
        } else {
          header.setAttribute("data-click", "false");
        }
      };
      let icons = document.getElementsByClassName("phone-menu");

      for (let i = 0; i < icons.length; i++) {
        icons[i].addEventListener("click", clickEvent);
      }
    </script>
  </body>
</html>

<style lang="scss">
  @use "../abstractStyles/" as *;
  header {
    @include container();
    position: relative;

    display: grid;
    grid-template-columns: 288px 1fr;
  }

  @include for-desktop-only {
    nav {
      display: flex;
    }
    .phone-menu {
      display: none;
    }
  }
  @include for-smaller-than-desktop {
    nav {
      background-color: red;
      position: absolute;
      width: 100vw;
      right: -1rem;
    }

    header[data-click="false"] nav {
      transform: translateX(-100%);
      transition: all;
      transition-duration: 50ms;
    }

    header[data-click="true"] nav {
      transform: translateX(0%);
      transition: all;
      transition-duration: 50ms;
    }

    header[data-click="false"] .hamburger {
      opacity: 1;
    }
    header[data-click="false"] .cross {
      opacity: 0;
    }
    header[data-click="true"] .hamburger {
      opacity: 0;
    }
    header[data-click="true"] .cross {
      opacity: 1;
    }
  }
  .phone-menu {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    z-index: 10;
  }
  .logo {
    position: relative;
    z-index: 10;
    display: flex;
    justify-content: center;
  }
  ul {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }

  @include for-smaller-than-desktop {
    ul {
      padding: $space-large;
      flex-direction: column;
      height: 80vh;
    }
  }

  li {
    list-style: none;
  }
  .nav-link {
    @include Nav();
  }
</style>
