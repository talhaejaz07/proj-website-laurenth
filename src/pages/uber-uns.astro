<style lang="scss">
  @use "../abstractStyles/" as *;

  .profiles {
    @include container();
    padding-top: 75px;
    padding-bottom: 75px;

    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
  }

  .profile {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .tags {
    display: flex;
    gap: 20px;

    p {
      @include Nav();
      background-color: $light-200;
      padding: 5px 20px;
      border-radius: 10px;
      border: 1px solid $black-250;
    }
  }

  .name {
    @include H2();
  }

  .quote-heading {
    padding-top: 110px;
    padding-bottom: 110px;
    background-color: $primary-500;

    div {
      @include container();
    }

    h2 {
      @include H1($light-000);
      text-align: center;
    }
  }

  .about {
    @include container();
    padding-top: 130px;
    padding-bottom: 130px;

    h2 {
      @include H1();
      text-align: center;
      padding-bottom: 80px;
    }

    .wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;

      p {
        @include P();
      }
    }
  }

  .banner {
    width: 100%;
  }

  .testimonials {
    @include container();
    padding-top: 130px;

    h2 {
      @include H1();
      text-align: center;
      padding-bottom: 100px;
    }
  }

  .cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
  }

  .red {
    background: $red-400;
  }

  .green {
    background: $green-300;
  }

  .card {
    padding: 60px 20px 40px 20px;

    display: flex;
    flex-direction: column;
    align-items: center;

    img {
      width: 166px;
      height: 166px;

      margin-bottom: 20px;
    }

    h3 {
      @include H3Bold($light-000);
    }

    h4 {
      @include Nav($light-000);
      padding-bottom: 60px;
    }

    p {
      @include Nav($light-000);
    }
  }
</style>
