<style lang="scss">
  @use "../../abstractStyles/" as *;

  .blog-list {
    @include container();

    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 70px;
  }

  img {
    width: 100%;
    padding-bottom: 30px;
  }

  .meta-data {
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding-bottom: 35px;
  }

  .tags {
    display: flex;
    gap: 20px;

    p {
      @include Nav();
      background-color: $light-200;
      padding: 5px 20px;
      border-radius: 10px;
      border: 1px solid $black-250;
    }
  }

  .date {
    @include Nav();
  }

  .blog {
    h2 {
      @include H2();
      padding-bottom: 40px;
    }
    p {
      @include P();
    }

    a {
      @include PRegular($primary-500);
      text-decoration: none;
      display: inline;
    }
  }
</style>
